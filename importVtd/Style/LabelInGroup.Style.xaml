<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                    xmlns:style="clr-namespace:importVtd.Style">
    
    <style:IttStyle x:Key="IttStyleParams"></style:IttStyle>

    <Style TargetType="telerik:Label" x:Key="LabelInGroupStyle">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="Tahoma"/>
        <Setter Property="Foreground" Value="{Binding LabelInGroupForeground, Mode=OneWay, Source={StaticResource IttStyleParams}}"/>
        <Setter Property="Background" Value="{Binding LabelInGroupBackground, Mode=OneWay, Source={StaticResource IttStyleParams}}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
</ResourceDictionary>
